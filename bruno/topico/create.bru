meta {
  name: create
  type: http
  seq: 2
}

post {
  url: {{baseUrl}}/topico
  body: json
  auth: none
}

headers {
  Cookie: better-auth.session_token={{sessionValue}}
}

body:json {
  {
    "name": "Novo Tópico",
    "descricao": "Descrição do tópico",
    "slug": "novo-topico",
    "materiaId": "{{materiaId}}"
  }
}

script:post-response {
  if (res.body && res.body.id) {
    bru.setVar("topicoId", res.body.id);
  } else {
    console.log("No ID found in response");
  }
}
