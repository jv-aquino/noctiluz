generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Materia {
  id            String   @id @default(uuid()) @map("_id")
  name          String
  descricao     String
}

model Topico {
  id            String   @id @default(uuid()) @map("_id")
  name          String
  descricao     String
}

model Licao {
  id            String   @id @default(uuid()) @map("_id")
  name          String
  descricao     String
}

model Exercicio {
  id            String   @id @default(uuid()) @map("_id")
  name          String
  descricao     String
}